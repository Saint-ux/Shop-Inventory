<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Inventory</title>
    <link rel="stylesheet" href="/styles.css" />
    <!-- Link to your external CSS -->
  </head>
  <body>
    <h1>Product Inventory</h1>

    <h2>Total Earnings: ETB <%= totalEarnings %></h2>
    <!-- This will show the total earnings -->

    <!-- Display products in a table -->
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.code %></td>
          <td><%= product.price %></td>
          <td><a href="#">Edit</a> | <a href="#">Delete</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Button to show archived products -->
    <a href="/archived">See Archived Products</a>

    <!-- Additional content and functionality can go here -->
  </body>
</html>
